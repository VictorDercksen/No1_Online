@using No1_Online.ViewModels

<div class="loading-schedule-card">
    <div class="card-header">
        <h3 class="mb-0">Client Payment Input</h3>
    </div>
    <div class="card-body">
        <EditForm Model="@ViewModel" OnValidSubmit="@HandleValidSubmit">
            <DataAnnotationsValidator />
            

            <div class="form-group">
                <label class="form-label" for="ClientPaymentDate">Deposit Date:</label>
                <InputDate id="ClientPaymentDate" @bind-Value="ViewModel.ClientPayment.Date" class="form-control" />
            </div>
            <div class="form-group">
                <label class="form-label" for="ClientPaymentAmount">Deposit Amount:</label>
                <InputNumber id="ClientPaymentAmount" @bind-Value="ViewModel.ClientPayment.Amount" class="form-control" />
            </div>
            <div class="text-end mt-4">
                <button type="submit" class="btn btn-primary">Credit Note</button>
            </div>
        </EditForm>
    </div>
</div>

@code {
    [Parameter]
    public ClientPaymentInputViewModel ViewModel { get; set; }

    [Parameter]
    public EventCallback<ClientPaymentInputViewModel> OnSave { get; set; }

    private async Task HandleValidSubmit()
    {
        await OnSave.InvokeAsync(ViewModel);
    }
}