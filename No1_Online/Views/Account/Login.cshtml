@model No1_Online.ViewModels.LoginVM

@{
    ViewData["Title"] = "Login";
}

<style>
    body {
        background-color: #f8f9fa;
    }

    .login-container {
        max-width: 400px;
        margin: 50px auto;
    }

    .login-card {
        border-radius: 15px;
        border: none;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        background-color: #ffffff;
    }

    .login-header {
        padding: 30px 20px;
        text-align: center;
        border-bottom: 1px solid #e9ecef;
    }

    .login-body {
        padding: 30px;
    }

    .form-control {
        border-radius: 8px;
        padding: 12px 20px;
        border: 1px solid #ced4da;
        transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
    }

        .form-control:focus {
            border-color: #007bff;
            box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
        }

    .btn-login {
        border-radius: 8px;
        padding: 12px 20px;
        font-weight: bold;
        text-transform: uppercase;
        letter-spacing: 1px;
        background-color: #007bff;
        border: none;
        transition: background-color 0.15s ease-in-out;
    }

        .btn-login:hover {
            background-color: #0056b3;
        }

    .logo {
        display: block;
        margin: 0 auto 20px;
        width: 120px;
        height: auto;
    }

    .form-check-input {
        margin-top: 0.25rem;
    }

    .register-link {
        color: #007bff;
        transition: color 0.15s ease-in-out;
    }

        .register-link:hover {
            color: #0056b3;
            text-decoration: underline;
        }

    .login-title {
        color: #343a40;
        font-size: 1.5rem;
        margin-bottom: 0;
    }
</style>

<div class="login-container">
    <div class="login-card">
        <div class="login-header">
            <img src="~/SVG/no1_new_logo.svg" alt="No1 Logo" class="logo">
            <h2 class="login-title">Welcome Back</h2>
        </div>
        <div class="login-body">
            <form asp-action="Login" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <div class="mb-4">
                    <label asp-for="Username" class="form-label">Username</label>
                    <input asp-for="Username" class="form-control" placeholder="Enter your username" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <div class="mb-4">
                    <label asp-for="Password" class="form-label">Password</label>
                    <input asp-for="Password" class="form-control" placeholder="Enter your password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="mb-4 form-check">
                    <input asp-for="RememberMe" class="form-check-input" />
                    <label asp-for="RememberMe" class="form-check-label">Remember me</label>
                </div>
                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-login btn-primary">Sign In</button>
                </div>
            </form>
            <div class="mt-4 text-center">
                <a asp-action="Register" class="register-link">Don't have an account? Sign up</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}