@using No1_Online.Views.Shared.Component

<div class="sidebar">
    <div class="sidebar-header">
        <i class="fas fa-bars sidebar-menu-icon"></i>
        <span class="sidebar-title">Menu</span>
    </div>
    <nav class="sidebar-nav">
        <div class="sidebar-section">
            <h4 class="sidebar-section-title">Input Forms</h4>
            <ul class="sidebar-menu">
                <li class="sidebar-menu-item">
                    <a href="javascript:void(0);" id="loadScheduleLink" data-component-name="Company" class="sidebar-link">
                        <i class="fas fa-file-alt sidebar-icon"></i>
                        <span>Loading Schedule</span>
                    </a>
                </li>
                <li class="sidebar-menu-item">
                    <a href="javascript:void(0);" id="CompanyLink" data-component-name="Company" class="sidebar-link">
                        <i class="fas fa-building sidebar-icon"></i>
                        <span>Company</span>
                    </a>
                </li>
            </ul>
        </div>
        <div class="sidebar-section">
            <h4 class="sidebar-section-title">Management Reports</h4>
            <ul class="sidebar-menu">
                <li class="sidebar-menu-item">
                    <button class="sidebar-dropdown-toggle" onclick="toggleDropdown('incomeVehiclesDropdown')">
                        <i class="fas fa-car sidebar-icon"></i>
                        <span>Income All Vehicles</span>
                        <i class="fas fa-chevron-down sidebar-dropdown-icon"></i>
                    </button>
                    <ul class="sidebar-dropdown-menu" id="incomeVehiclesDropdown">
                        <li class="sidebar-dropdown-item">
                            <IncomeAllVehiclesForm />
                        </li>
                    </ul>
                </li>
                <li class="sidebar-menu-item">
                    <a href="javascript:void(0);" id="turnoverReportLink" data-component-name="TurnoverReport" class="sidebar-link">
                        <i class="fas fa-chart-line sidebar-icon"></i>
                        <span>Turnover Report</span>
                    </a>
                </li>
            </ul>
        </div>
    </nav>
</div>

<style>
    .sidebar {
        width: 300px;
        height: 90vh;
        background-color: #2c3e50;
        color: #ecf0f1;
        padding: 20px;
        overflow-y: auto;
    }

    .sidebar-header {
        display: flex;
        align-items: center;
        margin-bottom: 30px;
        padding-bottom: 15px;
        border-bottom: 1px solid #34495e;
    }

    .sidebar-menu-icon {
        font-size: 1.5rem;
        margin-right: 5px;
    }

    .sidebar-title {
        font-size: 1.2rem;
        font-weight: 600;
        margin: 0;
    }

    .sidebar-section {
        margin-bottom: 30px;
    }

    .sidebar-section-title {
        font-size: 0.9rem;
        text-transform: uppercase;
        letter-spacing: 1px;
        margin-bottom: 15px;
        color: #bdc3c7;
    }

    .sidebar-menu {
        list-style-type: none;
        padding: 0;
        margin: 0;
    }

    .sidebar-menu-item {
        margin-bottom: 10px;
    }

    .sidebar-link, .sidebar-dropdown-toggle {
        display: flex;
        align-items: center;
        color: #ecf0f1;
        text-decoration: none;
        padding: 10px;
        border-radius: 5px;
        transition: background-color 0.3s ease;
    }

        .sidebar-link:hover, .sidebar-dropdown-toggle:hover {
            background-color: #34495e;
        }

    .sidebar-icon {
        width: 20px;
        margin-right: 10px;
        text-align: center;
    }

    .sidebar-dropdown-toggle {
        width: 100%;
        background: none;
        border: none;
        cursor: pointer;
        text-align: left;
    }

    .sidebar-dropdown-icon {
        margin-left: auto;
        transition: transform 0.3s ease;
    }

    .sidebar-dropdown-menu {
        list-style-type: none;
        padding-left: 30px;
        display: none;
    }

    .sidebar-dropdown-item {
        margin-top: 10px;
    }
</style>

<script>
    function toggleDropdown(id) {
        var dropdown = document.getElementById(id);
        var icon = dropdown.previousElementSibling.querySelector('.sidebar-dropdown-icon');
        if (dropdown.style.display === "none" || dropdown.style.display === "") {
            dropdown.style.display = "block";
            icon.style.transform = "rotate(180deg)";
        } else {
            dropdown.style.display = "none";
            icon.style.transform = "rotate(0deg)";
        }
    }
</script>