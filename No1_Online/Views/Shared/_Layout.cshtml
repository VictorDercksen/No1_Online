@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Mvc.TagHelpers
@inject SignInManager<AppUser> signInManager
@inject IHttpContextAccessor _httpContextAccessor


@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, Microsoft.AspNetCore.Mvc.RazorPages
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - No1_Online</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/No1_Online.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://getbootstrap.com/docs/5.3/assets/css/docs.css" rel="stylesheet">
</head>
<body>
    <header>
        @if (signInManager.IsSignedIn(User))
        {
           

            <!-- Existing Navbar -->
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
                <div class="container-fluid">
                    <a class="navbar-brand" href="/">
                        <img src="~/SVG/no1_new_logo.svg" alt="No1 Logo" height="30">
                    </a>

                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <div class="search-group d-flex">
                            <div class="input-group me-2">
                                <input class="form-control autocomplete-input" data-autocomplete-url="/Company/AutoSearchCompany" type="search" placeholder="Search Company" aria-label="Search" id="searchBox">
                                <button class="btn btn-outline-success" id="searchButton" type="button">Search</button>
                            </div>
                            <div class="input-group me-2">
                                <input class="form-control" type="search" placeholder="Search Load Number" aria-label="Search" id="LoadsearchBox">
                                <button class="btn btn-outline-success" id="LoadsearchButton" type="button">Search</button>
                            </div>
                            <button class="btn btn-outline-success btn-modal" type="button" data-bs-toggle="modal" data-bs-target="#uploadModal">Upload Record</button>
                        </div>
                    </div>
                    <div class="navbar-collapse collapse d-lg-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1"></ul>
                    </div>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1"></ul>
                        <partial name="LoginPartial" />
                    </div>
                </div>
            </nav>

            <!-- Modal -->
            <div class="modal fade" id="uploadModal" tabindex="-1" aria-labelledby="uploadModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="uploadModalLabel">Upload Record</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <div class="mb-3">
                                <label for="fileInput" class="form-label">Select file to upload</label>
                                <input type="file" class="form-control" id="fileInput">
                            </div>
                            <button id="uploadButton" class="btn btn-primary">Upload</button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </header>

    <div class="container-fluid">
        <div class="row">
            <div class="col-auto">
                @if (signInManager.IsSignedIn(User))
                {
                    <!-- Offcanvas content here -->
                    <partial name="OffCanvasPartial" />
                }
            </div>
            <div class="col flex-grow-1">
                @if (signInManager.IsSignedIn(User))
                {
                    <div id="secondNavbarContainer"></div>
                    <div>
                        <ul class="nav nav-tabs" id="dynamicTabList">
                            <li class="nav-item">
                                <a class="nav-link active" id="reports-tab" data-bs-toggle="tab" href="#reports-storage-content" >Reports Storage</a>
                            </li>
                        </ul>
                        <div class="tab-content" id="dynamicTabContent">
                            <div class="tab-pane fade show active" id="reports-storage-content" role="tabpanel" aria-labelledby="reports-tab">
                                <!-- Reports Storage content will be loaded here -->
                            </div>
                        </div>
                    </div>
                }
                <main role="main" class="pb-3">
                    
                    @RenderBody()
                </main>
            </div>
        </div>
    </div>

    <partial name="ModalPartial" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/company.js"></script>
    <script src="~/js/autocomplete.js"></script>
    <script src="_framework/blazor.server.js"></script>
    <script src="~/js/Reports.js"></script>
   
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <script>
        $(document).ready(function () {
        @if (signInManager.IsSignedIn(User))
        {
            <text>
                    $("#reports-storage-content").load("/ReportsManagement");
            </text>
        }

                $('a[data-bs-toggle="tab"]').on('show.bs.tab', function (e) {
                    var target = $(e.target).attr("href");
                    if (target === "#reports-storage-content") {
                        $("#reports-storage-content").load("/ReportsManagement");
                    }
                });

            // Handle Load Schedule button click
            $("#loadScheduleLink").on("click", function () {
                // Generate a new tab ID
                var newTabId = "loading-schedule-tab";
                var newTabPaneId = "loading-schedule-content";

                // Add a new tab with a close button
                $("#dynamicTabList").append(
                    '<li class="nav-item">' +
                    '<a class="nav-link" id="' + newTabId + '" data-bs-toggle="tab" href="#' + newTabPaneId + '">Loading Schedule ' +
                    '<button type="button" class="close-tab-btn" aria-label="Close" style="border:none; background:none;" onclick="closeTab(\'' + newTabId + '\', \'' + newTabPaneId + '\')">&times</button>' +
                    '</a>' +
                    '</li>'
                );

                // Add a new tab pane
                $("#dynamicTabContent").append(
                    '<div class="tab-pane fade" id="' + newTabPaneId + '" role="tabpanel" aria-labelledby="' + newTabId + '">' +
                    'Loading...' +
                    '</div>'
                );

                // Activate the new tab
                $("#" + newTabId).tab('show');

                // Load the content into the new tab pane
                $("#" + newTabPaneId).load("/loadingSchedule");
            });

            $("#CompanyLink").on("click", function () {
                // Generate a new tab ID
                var newTabId = "company-schedule-tab";
                var newTabPaneId = "company-content";

                // Add a new tab with a close button
                $("#dynamicTabList").append(
                    '<li class="nav-item">' +
                    '<a class="nav-link" id="' + newTabId + '" data-bs-toggle="tab" href="#' + newTabPaneId + '">Company ' +
                    '<button type="button" class="close-tab-btn" aria-label="Close" style="border:none; background:none;" onclick="closeTab(\'' + newTabId + '\', \'' + newTabPaneId + '\')">&times</button>' +
                    '</a>' +
                    '</li>'
                );

                // Add a new tab pane
                $("#dynamicTabContent").append(
                    '<div class="tab-pane fade" id="' + newTabPaneId + '" role="tabpanel" aria-labelledby="' + newTabId + '">' +
                    'Loading...' +
                    '</div>'
                );

                // Activate the new tab
                $("#" + newTabId).tab('show');

                // Load the content into the new tab pane
                $("#" + newTabPaneId).load("/Company");
            });
        });

        function addTab(tabId, paneId, tabTitle, url, startDate, endDate, transporter) {
            // Construct the URL with parameters
            var _transporter = encodeURIComponent(transporter);
            var fullUrl = `${url}/${startDate}/${endDate}/${_transporter}`;

            // Add a new tab with a close button
            $("#dynamicTabList").append(
                '<li class="nav-item">' +
                '<a class="nav-link" id="' + tabId + '" data-bs-toggle="tab" href="#' + paneId + '">' + tabTitle + ' ' +
                '<button type="button" class="close-tab-btn" aria-label="Close" style="border:none; background:none;" onclick="closeTab(\'' + tabId + '\', \'' + paneId + '\')">&times;</button>' +
                '</a>' +
                '</li>'
            );

            // Add a new tab pane
            $("#dynamicTabContent").append(
                '<div class="tab-pane fade" id="' + paneId + '" role="tabpanel" aria-labelledby="' + tabId + '">' +
                'Loading...' +
                '</div>'
            );

            // Activate the new tab
            $("#" + tabId).tab('show');
            $("#" + paneId).load(fullUrl);
            
            // Load the content into the new tab pane
            // $("#" + paneId).load(fullUrl, function (response, status, xhr) {
            //     if (status == "error") {
            //         var msg = "Sorry but there was an error: ";
            //         $("#" + paneId).html(msg + xhr.status + " " + xhr.statusText);
            //     }
            // });
        }
        // Function to close a tab
        function closeTab(tabId, paneId) {
            // Remove the tab and its pane
            $('#' + tabId).closest('li').remove();
            $('#' + paneId).remove();

            // Activate the first tab if there are any left
            var firstTab = $('#dynamicTabList a:first');
            if (firstTab.length) {
                firstTab.tab('show');
            }
        }
    </script>
</body>
</html>
