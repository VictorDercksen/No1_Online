@page
@using Microsoft.AspNetCore.Identity
@using No1_Online.Models
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, Microsoft.AspNetCore.Mvc.RazorPages
@inject SignInManager<AppUser> signInManager

@model No1_Online.Pages.ReportsManagementModel

@{
    ViewData["Title"] = "Reports Management";
}



<div class="container py-5">
    <div class="row mb-4">
        <div class="col-12 col-md-6">
            <input class="form-control" type="search" placeholder="Search Reports" aria-label="Search" id="reportSearchBox">
        </div>
        <div class="col-12 col-md-auto mt-3 mt-md-0">
            <button class="btn btn-outline-success w-100" id="reportSearchButton" type="button">Search</button>
        </div>
    </div>
    <div class="accordion" id="reportAccordion">
        <!-- Income All Vehicles Reports -->
        <div class="accordion-item">
            <h2 class="accordion-header" id="headingIncomeAllVehicles">
                <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseIncomeAllVehicles" aria-expanded="true" aria-controls="collapseIncomeAllVehicles">
                    Income All Vehicles
                </button>
            </h2>
            <div id="collapseIncomeAllVehicles" class="accordion-collapse collapse show" aria-labelledby="headingIncomeAllVehicles" data-bs-parent="#reportAccordion">
                <div class="accordion-body">
                    <div class="list-group">
                        @foreach (var report in Model.Reports)
                        {
                            <div class="list-group-item d-flex justify-content-between align-items-center">
                                <span>@report</span>
                                <div>
                                    <a href="/Reports/Download?name=@report" class="btn btn-success btn-sm me-2">Download</a>
                                    <button class="btn btn-danger btn-sm" onclick="deleteReport('@report')">Delete</button>
                                </div>
                            </div>
                        }
                        @if (!Model.Reports.Any())
                        {
                            <div class="list-group-item text-center">
                                No reports available.
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

